{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5000"
      },
      "gRPC": {
        "Url": "https://*:5001",
        "Protocols": "Http2",
        "Certificate": {
          "Path": "grpc-cert.pfx",
          "Password": "1234"
        }
      }
    }
  },
  "BackupSettings": {
    "DbUser": "postgres",
    "DbName": "MyDb",
    "DbPassword": "postgres",
    "PgDumpPath": "/usr/bin/pg_dump", // Путь к pg_dump на Linux
    "BackupPath": "/backups", // Путь для сохранения бэкапов
    "DbHost": "127.0.0.1",
    "DbPort": "5432"
  }
}